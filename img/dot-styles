\tikzstyle{automated} = [
    rectangle split,
    rectangle split horizontal,
    rectangle split parts=2,
    rectangle split part fill={White, Yellow!50},
    draw=MidnightBlue, very thick,
    text centered, rounded corners,
    minimum height=2em
]

